<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            fresco:roundAsCircle="true"
            android:id="@+id/img"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天蝎喝牛奶"
                android:textSize="18sp"
                android:padding="@dimen/x10"
                android:id="@+id/tv_wangming"
                android:textColor="@color/red"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-5-23  14:25"
                    android:padding="@dimen/x10"
                    android:id="@+id/tv_time"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_add"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/ly"
                android:layout_marginTop="@dimen/x10"
                android:visibility="invisible"
                android:gravity="center"
                android:layout_marginBottom="@dimen/y12"
                android:layout_marginLeft="@dimen/x5"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/x70"
                    android:layout_height="@dimen/x70"
                    android:src="@mipmap/shiled1"
                    android:id="@+id/xinxi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/x25"
                    android:layout_height="wrap_content"
                    android:text="屏蔽"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:visibility="invisible"
                android:id="@+id/fxx"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x5"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/y12"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/fenxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x70"
                    android:src="@mipmap/copylink1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x25"
                    android:text="复制链接"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/sc"
                android:visibility="invisible"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x5"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/y12"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/zan"
                    android:layout_width="@dimen/x70"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/report1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x25"
                    android:text="举报"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_isopenMenu"
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x70"
                android:src="@mipmap/jia"
                android:layout_marginBottom="@dimen/y14"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="天气美美的，适合郊游"
        android:textSize="20sp"
        android:padding="10dip"
        android:id="@+id/tv_content"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/shipin_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y340"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dip"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="骑猪上高速"
                android:id="@+id/tv_plzuozhe"
                android:textColor="@color/aaa"
                android:textSize="17sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":不错"
                android:textSize="17sp"
                android:id="@+id/tv_plcontent"
                />
        </LinearLayout>
        <com.example.asus.yikezhong.zidingyi.RotateTextView
            android:layout_width="0dip"
            android:layout_height="@dimen/y130"
            android:id="@+id/ceshi"
            android:layout_weight="1"
            android:autoLink="all"
            android:text="神评!"
            android:layout_marginTop="@dimen/x35"
            android:textColor="@color/grey_color3"
            android:textSize="@dimen/y50"
            />
    </LinearLayout>
</LinearLayout>
