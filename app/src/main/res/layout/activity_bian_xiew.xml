<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.yikezhong.BianXiewActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:background="@color/aaa">
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_centerVertical="true"
            android:textColor="@color/TextWhite"
            android:textSize="17sp"
            android:layout_marginLeft="@dimen/x40"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表文章"
            android:textColor="@color/TextWhite"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/fabiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表"
            android:layout_centerVertical="true"
            android:textColor="@color/TextWhite"
            android:textSize="17sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"/>
    </RelativeLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:padding="10dip"
         >
         <EditText
             android:layout_width="match_parent"
             android:layout_height="@dimen/y350"
             android:background="@null"
             android:paddingBottom="@dimen/y200"
             android:id="@+id/et_content"
             android:hint="请输入内容,禁止输入色情、暴力等违反国家法律的内容，违者将以封号处理"
             />
         <ImageView
             android:layout_width="@dimen/x160"
             android:layout_height="@dimen/y180"
             android:src="@mipmap/raw_1500020546"
             android:id="@+id/img_jia"
             />
           <android.support.v7.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/rv_image"
               ></android.support.v7.widget.RecyclerView>
     </LinearLayout>
</LinearLayout>
