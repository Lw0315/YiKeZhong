<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@mipmap/login"
    tools:context="com.example.asus.yikezhong.LoginActivity"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:src="@mipmap/raw_1500023215"
        android:padding="12dip"
        android:id="@+id/back"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="10dip"
        />
    <com.example.asus.yikezhong.utils.ImageCrile
        android:layout_width="@dimen/x170"
        android:layout_height="@dimen/y170"
        app:circle="false"
        android:src="@mipmap/logo"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y55"
        />
    <LinearLayout
        android:layout_width="260dip"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="@drawable/btn_back"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y350"
        >
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@mipmap/wx"
            android:padding="7dip"
            android:layout_marginLeft="10dip"
            />
        <Button
            android:layout_width="140dip"
            android:layout_height="50dip"
            android:text="微信登录"
            android:textColor="#fff"
            android:textSize="21sp"
            android:background="#00000000"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="260dip"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="@drawable/btn_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        >
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@mipmap/qq"
            android:padding="7dip"
            android:layout_marginLeft="10dip"
            />
        <Button
            android:layout_width="140dip"
            android:layout_height="50dip"
            android:text="QQ登录"
            android:textColor="#fff"
            android:id="@+id/qq"
            android:textSize="21sp"
            android:background="#00000000"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更多登录方式"
        android:textSize="19sp"
        android:textColor="#fff"
        android:id="@+id/gengduo"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        />
</LinearLayout>
</LinearLayout>



