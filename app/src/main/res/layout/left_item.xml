<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/y320"
           android:id="@+id/rl"
           android:background="@mipmap/drawerlayout_background">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_centerVertical="true"
               android:layout_height="wrap_content">
               <com.facebook.drawee.view.SimpleDraweeView
                   android:id="@+id/icon"
                   android:layout_width="@dimen/x135"
                   android:layout_height="@dimen/y135"
                   android:layout_alignParentLeft="true"
                   android:layout_marginLeft="@dimen/x20"
                   fresco:placeholderImage="@mipmap/raw_1499936862"
                   fresco:roundAsCircle="true" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="椰汁奶茶"
                   android:textSize="19sp"
                   android:textColor="#fff"
                   android:id="@+id/tv_name"
                   android:layout_marginLeft="@dimen/x32"
                   android:layout_toRightOf="@+id/icon"
                   android:layout_centerVertical="true"
                   />
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/y105"
                   android:src="@mipmap/sex"
                   android:id="@+id/img_sex"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="@dimen/x10"

                   />
           </RelativeLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="@dimen/y75"
               android:layout_alignParentBottom="true"
               android:text="编辑个性签名"
               android:textSize="19sp"
               android:textColor="#fff"
               android:layout_marginLeft="@dimen/x20"
               />
       </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_margin="@dimen/x10"
           android:background="@drawable/waterview_item"
           android:clickable="true"
           android:id="@+id/rl_guanzhu"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="@dimen/x80"
               android:layout_height="@dimen/y60"
               android:src="@mipmap/raw_1499933216"
               android:id="@+id/img"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="我的关注"
               android:textSize="18sp"
               android:layout_centerVertical="true"
               android:textColor="#000"
               android:layout_marginLeft="@dimen/x20"
               android:layout_toRightOf="@+id/img"
               android:id="@+id/tv"
               />
           <ImageView
               android:layout_width="@dimen/x40"
               android:layout_height="@dimen/y40"
               android:src="@mipmap/raw_1499943790"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/x50"
               android:layout_centerVertical="true"

               />
       </RelativeLayout>
       <RelativeLayout
           android:background="@drawable/waterview_item"
           android:clickable="true"
           android:layout_width="match_parent"
           android:layout_margin="@dimen/x10"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="@dimen/x80"
               android:layout_height="@dimen/y60"
               android:src="@mipmap/raw_1499947358"
               android:id="@+id/img1"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="我的收藏"
               android:textSize="18sp"
               android:layout_centerVertical="true"
               android:textColor="#000"
               android:layout_marginLeft="@dimen/x20"
               android:layout_toRightOf="@+id/img1"
               android:id="@+id/tv1"
               />
           <ImageView
               android:layout_width="@dimen/x40"
               android:layout_height="@dimen/y40"
               android:src="@mipmap/raw_1499943790"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/x50"
               android:layout_centerVertical="true"

               />
       </RelativeLayout>
       <RelativeLayout
           android:background="@drawable/waterview_item"
           android:clickable="true"
           android:layout_width="match_parent"
           android:layout_margin="@dimen/x10"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="@dimen/x80"
               android:layout_height="@dimen/y60"
               android:src="@mipmap/raw_1499946865"
               android:id="@+id/img2"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="搜索好友"
               android:textSize="18sp"
               android:layout_centerVertical="true"
               android:textColor="#000"
               android:layout_marginLeft="@dimen/x20"
               android:layout_toRightOf="@+id/img2"
               android:id="@+id/tv2"
               />
           <ImageView
               android:layout_width="@dimen/x40"
               android:layout_height="@dimen/y40"
               android:src="@mipmap/raw_1499943790"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/x50"
               android:layout_centerVertical="true"

               />
       </RelativeLayout>
       <RelativeLayout
           android:background="@drawable/waterview_item"
           android:clickable="true"
           android:layout_width="match_parent"
           android:layout_margin="@dimen/x10"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="@dimen/x80"
               android:layout_height="@dimen/y60"
               android:src="@mipmap/raw_1499947389"
               android:id="@+id/img3"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="消息通知"
               android:textSize="18sp"
               android:layout_centerVertical="true"
               android:textColor="#000"
               android:layout_marginLeft="@dimen/x20"
               android:layout_toRightOf="@+id/img3"
               android:id="@+id/tv3"
               />
           <ImageView
               android:layout_width="@dimen/x40"
               android:layout_height="@dimen/y40"
               android:src="@mipmap/raw_1499943790"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/x50"
               android:layout_centerVertical="true"

               />
       </RelativeLayout>

   </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y120"
        >

        <ImageView
            android:id="@+id/iv_left_ye1"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/check"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_left_ye2"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/check"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"
            android:text="夜间模式"/>

        <Switch
            android:id="@+id/st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:thumb="@drawable/check_fa"
            android:layout_centerVertical="true"
            android:track="@drawable/check_color" />

        <ImageView
            android:id="@+id/iv_left_ye"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/select"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y60"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left_zuopin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:src="@mipmap/raw_1499947056"/>

        <ImageView
            android:id="@+id/iv_left_shezhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:src="@mipmap/raw_1499947157"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="我的作品"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="设置"/>
    </LinearLayout>

</RelativeLayout>
