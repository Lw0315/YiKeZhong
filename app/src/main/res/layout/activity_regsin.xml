<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yeguang"
    tools:context="com.example.asus.yikezhong.RegsinActivity">
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/regist_back"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="10dip"
            android:padding="12dip"
            android:src="@mipmap/raw_1500023215"/>
        <TextView
            android:id="@+id/hava_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？"
            android:textSize="16sp"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/TextStyle"/>
    </RelativeLayout>

    <com.example.asus.yikezhong.utils.ImageCrile
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:src="@mipmap/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:circle="false"
        app:radius="10dp"
        />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_width="260dp"
        android:background="@drawable/layout"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/et_name"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:textColorHint="@color/hintColor"
            android:hint="请输入手机号"/>
        <View
            android:id="@+id/view"
            android:layout_below="@+id/et_name"
            android:layout_width="260dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@color/view"/>
        <EditText
            android:id="@+id/et_pwd"
            android:layout_below="@+id/view"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@null"
            android:password="true"
            android:textColorHint="@color/hintColor"
            android:hint="输入大小写和数字，密码不能超过8位"/>

    </RelativeLayout>

    <Button
        android:id="@+id/reg_button"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg1"
        android:gravity="center"
        android:text="注册"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="@color/TextWhite" />

    <TextView
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游客登录"
        android:textSize="16sp"
        android:textColor="@color/TextStyle"
        />

</RelativeLayout>



