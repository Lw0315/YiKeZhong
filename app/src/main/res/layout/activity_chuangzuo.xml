<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.yikezhong.ChuangzuoActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:background="@color/aaa">
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_centerVertical="true"
            android:textColor="@color/TextWhite"
            android:textSize="17sp"
            android:layout_marginLeft="@dimen/x40"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="创作"
            android:textColor="@color/TextWhite"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/huanghun">

        <ImageView
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y200"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/shipin"
            android:layout_marginTop="@dimen/y100"
            android:src="@mipmap/shi" />
        <ImageView
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y200"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/duan"
            android:id="@+id/duanzi"
            android:layout_marginTop="@dimen/y400"/>
    </RelativeLayout>
</RelativeLayout>




