<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.yikezhong.SheZhiActivity">
    <com.example.asus.yikezhong.zidingyi.View_Title
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:id="@+id/view_title"
        ></com.example.asus.yikezhong.zidingyi.View_Title>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:layout_below="@+id/view_title"
        android:id="@+id/view"
        android:background="@color/grey_color3"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/view"
        android:orientation="vertical"
        android:id="@+id/ll"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查更新"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:layout_marginLeft="@dimen/x30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.1.1"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x50"
                />
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:src="@mipmap/raw_1499943790"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/grey_color3"
            android:layout_marginLeft="@dimen/x60"
            ></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:layout_marginLeft="@dimen/x30"
                />
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:src="@mipmap/raw_1499943790"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:layout_below="@+id/ll"
        android:id="@+id/vv"
        android:background="@color/grey_color3"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/vv"
        android:orientation="vertical"
         android:id="@+id/ly"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于一刻钟"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:layout_marginLeft="@dimen/x30"
                />
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:src="@mipmap/raw_1499943790"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/grey_color3"
            android:layout_marginLeft="@dimen/x60"
            ></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:layout_marginLeft="@dimen/x30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128MB"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x50"
                />
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:src="@mipmap/raw_1499943790"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x10"
                />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:textSize="19sp"
        android:layout_marginTop="@dimen/x30"
        android:textColor="@color/white"
        android:layout_below="@+id/ly"
        android:id="@+id/btn_tuichu"
        android:background="@drawable/btn_bg3"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        />

</RelativeLayout>
